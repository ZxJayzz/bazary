generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                    String          @id @default(cuid())
  name                  String
  email                 String          @unique
  password              String?
  phone                 String?
  city                  String          @default("Antananarivo")
  district              String?
  image                 String?
  mannerTemp            Float           @default(36.5)
  products              Product[]
  buyerConversations    Conversation[]  @relation("BuyerConversations")
  sellerConversations   Conversation[]  @relation("SellerConversations")
  sentMessages          Message[]       @relation("SentMessages")
  favorites             Favorite[]
  notifications         Notification[]
  reports               Report[]        @relation("reports")
  reviewsGiven          Review[]        @relation("ReviewsGiven")
  reviewsReceived       Review[]        @relation("ReviewsReceived")
  proposalsSent         PriceProposal[] @relation("ProposalsSent")
  proposalsReceived     PriceProposal[] @relation("ProposalsReceived")
  keywordAlerts         KeywordAlert[]
  createdAt             DateTime        @default(now())
}

model Product {
  id            String          @id @default(cuid())
  title         String
  description   String
  price         Int
  images        String          // JSON array of image URLs
  category      String
  status        String          @default("available") // available, reserved, sold
  negotiable    Boolean         @default(false)
  city          String
  district      String?
  views         Int             @default(0)
  userId        String
  user          User            @relation(fields: [userId], references: [id])
  conversations Conversation[]
  favorites     Favorite[]
  reports       Report[]
  proposals     PriceProposal[]
  bumpedAt      DateTime?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Category {
  id     String  @id @default(cuid())
  name   String  @unique
  nameFr String
  nameMg String
  icon   String?
}

model Conversation {
  id         String    @id @default(cuid())
  productId  String
  product    Product   @relation(fields: [productId], references: [id])
  buyerId    String
  buyer      User      @relation("BuyerConversations", fields: [buyerId], references: [id])
  sellerId   String
  seller     User      @relation("SellerConversations", fields: [sellerId], references: [id])
  messages   Message[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Message {
  id             String       @id @default(cuid())
  content        String
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  senderId       String
  sender         User         @relation("SentMessages", fields: [senderId], references: [id])
  read           Boolean      @default(false)
  createdAt      DateTime     @default(now())
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, productId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String   // "new_message", "product_favorited", "product_sold", "price_drop"
  title     String
  message   String
  link      String?  // URL to navigate to
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Report {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  reporterId  String
  reporter    User     @relation("reports", fields: [reporterId], references: [id])
  reason      String
  description String?
  status      String   @default("pending") // pending, reviewed, resolved
  createdAt   DateTime @default(now())
}

model Review {
  id          String   @id @default(cuid())
  reviewerId  String
  reviewer    User     @relation("ReviewsGiven", fields: [reviewerId], references: [id])
  reviewedId  String
  reviewed    User     @relation("ReviewsReceived", fields: [reviewedId], references: [id])
  productId   String
  rating      Int      // 1-5
  mannerItems String   // JSON array of selected manner praise items
  content     String?  // optional text review
  createdAt   DateTime @default(now())

  @@unique([reviewerId, productId])
}

model PriceProposal {
  id            String   @id @default(cuid())
  productId     String
  product       Product  @relation(fields: [productId], references: [id])
  buyerId       String
  buyer         User     @relation("ProposalsSent", fields: [buyerId], references: [id])
  sellerId      String
  seller        User     @relation("ProposalsReceived", fields: [sellerId], references: [id])
  proposedPrice Int
  status        String   @default("pending") // pending, accepted, rejected
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([buyerId, productId])
}

model KeywordAlert {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  keyword   String
  createdAt DateTime @default(now())

  @@unique([userId, keyword])
}
